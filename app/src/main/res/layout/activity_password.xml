<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.edgarmeneses.serpenm.ActivityPassword"
    android:background="@mipmap/fondo1a">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cambiar Contraseña"
        android:id="@+id/textTitle"
        android:textSize="33dp"
        android:textStyle="bold"
        android:layout_below="@+id/imgBUser"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textUser"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/textTitle"
        android:text="Usurio: "
        android:layout_alignRight="@+id/textPass"
        android:layout_alignEnd="@+id/textPass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contraseña:  "
        android:id="@+id/textPass"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/textUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rol: "
        android:id="@+id/textRol"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/textPass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="italic"
        android:layout_alignRight="@+id/textPass"
        android:layout_alignEnd="@+id/textPass" />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/imgBSave"
        android:background="@mipmap/botonguardar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="220px"
        android:layout_height="220px"
        android:id="@+id/imgBUser"
        android:background="@mipmap/user"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textTitle"
        android:layout_alignEnd="@+id/textTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ttt"
        android:id="@+id/txtUser"
        android:layout_alignBottom="@+id/textUser"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textUser"
        android:layout_toRightOf="@+id/textUser"
        android:layout_toEndOf="@+id/textUser" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="tttttttttttttttttttttttttttttttttttttttttttttttttt"
        android:id="@+id/textRole"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textRol"
        android:layout_alignBottom="@+id/textRol"
        android:layout_toRightOf="@+id/textPass"
        android:layout_toEndOf="@+id/textPass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPass"
        android:layout_above="@+id/textRol"
        android:layout_toRightOf="@+id/textPass"
        android:layout_alignRight="@+id/txtUser"
        android:layout_alignEnd="@+id/txtUser" />

</RelativeLayout>
