<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@mipmap/fondo1a"
    android:id="@+id/panelPrincipal">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgTittle"
        android:background="@mipmap/logo1a"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/btnIngres"
        android:layout_below="@+id/edPassword"
        android:layout_marginTop="57dp"
        android:layout_alignLeft="@+id/imgTittle"
        android:layout_alignStart="@+id/imgTittle"
        android:layout_alignRight="@+id/imgTittle"
        android:layout_alignEnd="@+id/imgTittle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edUser"
        android:background="#ffffffff"
        android:layout_below="@+id/imgTittle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:layout_alignRight="@+id/edPassword"
        android:layout_alignEnd="@+id/edPassword"
        android:hint="Usuario"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edPassword"
        android:background="#ffffffff"
        android:layout_below="@+id/edUser"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="63dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="ContraseÃ±a"/>

</RelativeLayout>
