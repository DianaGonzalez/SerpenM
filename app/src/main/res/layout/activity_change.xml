<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.edgarmeneses.serpenm.ActivityChange"
    android:background="@mipmap/fondo1a">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:layout_width="220px"
                android:layout_height="220px"
                android:id="@+id/imgCloseSes"
                android:background="@mipmap/user"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Cerificado de Supervivencia "
                android:id="@+id/textTitleCS"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textIsSelectable="false"
                android:layout_below="@+id/imgCloseSes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Cedula: "
                android:id="@+id/textWrit"
                android:layout_marginTop="55dp"
                android:layout_below="@+id/textTitleCS"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ttttttttttttttt"
                android:id="@+id/txtWrit"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nombres: "
                android:id="@+id/textName"
                android:layout_marginTop="46dp"
                android:layout_below="@+id/textWrit"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="tttttttttt"
                android:id="@+id/txtName"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Apellidos: "
                android:id="@+id/textLast"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ttttttttttttttttttt"
                android:id="@+id/txtLast"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fecha de Nacimiento: "
                android:id="@+id/textDatebirth"
                android:layout_marginTop="46dp"
                android:layout_below="@+id/textLast"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ttttttttttttttt"
                android:id="@+id/txtDatebirth"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="126dp"
                android:layout_height="72dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Lugar de Nacimiento: "
                android:id="@+id/textPlacebirth"
                android:layout_below="@+id/textDatebirth"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="46dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ttttttttttttttttttt"
                android:id="@+id/txtPlacebirth"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fecha de Expedicion: "
                android:id="@+id/textExpebirth"
                android:layout_below="@+id/textPlacebirth"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="53dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ttttttttttttttttttttt"
                android:id="@+id/txtExpebirth"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="200px"
                android:layout_height="200px"
                android:id="@+id/imageBSave"
                android:background="@mipmap/botonguardar"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/textDatebirth"
                android:layout_toEndOf="@+id/textDatebirth" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
